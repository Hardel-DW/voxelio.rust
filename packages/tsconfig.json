{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": false,
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "pretty": true,
        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "newLine": "LF",
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "ES2022",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "wasm",
        "node_modules"
    ]
}